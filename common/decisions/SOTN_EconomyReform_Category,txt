	SOTN_IndustrialZone = {
		icon = GFX_decision_generic_construction
		state_target = yes

		target_root_trigger = {
			has_completed_focus = SOTN_RoyalOfficeOfWorks
		}
		target_trigger = {
			FROM = {
				is_core_of = ROOT
			}
		}
		targets = {

		}
		visible = {
			has_completed_focus = SOTN_RoyalOfficeOfWorks
			FROM = {
				is_core_of = ROOT
				is_owned_by = ROOT
				NOT = {
					has_dynamic_modifier = {
						modifier = SOTN_MODIFIER_IndustrialZone_mod
					}
				}
			}
		}
		cancel_trigger = {
			FROM = {
				NOT = {
					is_owned_by = ROOT
				}
			}
		}
		cancel_effect = {
			add_political_power = 40
			hidden_effect = {
				add_to_variable = {
					SOTN_IndustrialZones_var = -1
				}
			}
		}

		on_map_mode = map_only
		days_remove = 40
		cost = 40

		# custom_cost_trigger = {

		# }
		# custom_cost_text = SOTN_ReinforceGarrisons_cost
		available = {
			num_of_civilian_factories_available_for_projects > 2
			FROM = {
				NOT = {
					has_dynamic_modifier = {
						modifier = SOTN_MODIFIER_BadInfrastructure_mod
					}
				}
			}
			custom_trigger_tooltip = {
				tooltip = SOTN_IndustrialZone_trigger_tt
				check_variable = {
					var = SOTN_IndustrialZones_var
					value = SOTN_IndustrialZonesMax_var
					compare = less_than_or_equals
				}
			}
		}
		complete_effect = {
			hidden_effect = {
				add_to_variable = {
					SOTN_IndustrialZones_var = 1
				}
			}
		}
		modifier = {
			civilian_factory_use = 3
		}
		remove_effect = {
			FROM = {
				add_building_construction = {
					type = infrastructure
					level = 1
				}
				add_dynamic_modifier = {
					modifier = SOTN_MODIFIER_IndustrialZone_mod
				}
			}
		}
	}
